<% include('../layouts/header.ejs') %>


<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
    }

    h1 {
        color: #333;
    }

    table {
        border-collapse: collapse;
        width: 50%;
        margin-top: 20px;
        background-color: #fff;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #4CAF50;
        color: white;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    a {
        text-decoration: none;
        color: #333;
        margin-right: 10px;
    }
</style>

<h1>Dashboard</h1>



<br><br>

<table width="50%">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Action</th>
    </tr>
    <% 
    if (users.length > 0) {
        for(let i=0;i<users.length;i++){
        %>
        <tr>
            <td><%= users[i].name %></td>
            <td><%= users[i].email %></td>
            <td><%= users[i].mobile %></td>
            <td>
                <a href="/admin/user-edit?id=<%= users[i]._id%>">Edit</a>
                <a href="#" onclick="confirmDelete('<%= users[i]._id %>')">Delete</a>
                
               
            </td>
        </tr>
        <%
        }
    }else{
        %>
        <tr>
            <td colspan="5">Users Not Found</td>
        </tr>
        <%
    }
    %>    
</table>

<a href="/admin/home">Go to Home</a>


<% include('../layouts/footer.ejs') %>
<script>
    function confirmDelete(userId) {
        if (confirm("Are you sure you want to delete this user?")) {
            window.location.href = "/admin/user-delete?id=" + userId;
        }
    }
</script>