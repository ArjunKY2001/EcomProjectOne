    <script>
        function switchStatus(index){
            const orderId = document.getElementById("order-id").value;
            const orderItemsts = document.getElementById(`itemstatus${index}`).textContent;
    
            fetch(`/user/itemStatus?qry=${orderItemsts}&count=${index}&ordr=${orderId}`, {
                method: "GET",
                headers: {
                    'Content-Type': 'application/json' 
                }
            })
            .then(response => {
        if (response.ok) {
            console.log("Fetch successful");
           
        } else {
            console.error("Error during fetch:", response.status);

        }
        
        
        })
        .catch(error => {
        console.error("Fetch error:", error);
        // Add logic here for handling fetch errors
        })
        setTimeout(() => {
            window.location.reload();
        },100);
    }
